    "gulp-jshint": "^1.10.0",
    "gulp-less": "^3.0.2",
    "gulp-load-plugins": "^0.9.0",
    "gulp-minify-css": "^1.0.0",
    "gulp-ng-annotate": "^1.0.0",
    "gulp-uglify": "^1.2.0",
    "gulp-watch": "^4.2.4",
    "istanbul": "0.3.x",
